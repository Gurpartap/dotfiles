;

[colors]
foreground = #282828
background = #00f9f5d7
modb       = #fff9f5d7
modb1      = #fff9f5d7
modb2      = #fff9f5d7

red     = #9d0006
orange  = #af3a03
yellow  = #b57614
green   = #79740e
cyan    = #427b58
blue    = #076678
magenta = #8f3f71
white   = #d65d0e

[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

[bar/top]
width    = 90%
height   = 30
offset-x = 5%
offset-y = 710
radius = 5.0

locale     = de_DE.UTF-8
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = scientifica:size=8:antialias=true;
font-1 = Siji:size=9:;

modules-left   = date1 volume cpu weather
modules-center = 2bws
modules-right  = cmusnp previous playpause next

tray-position    =
tray-padding     = 2
tray-transparent = false
tray-detached    = false
tray-background  = ${colors.modb}
tray-maxsize     = 12

spacing             = 1
padding-left        = 0
padding-right       = 0
module-margin-left  = 0
module-margin-right = 0

[module/volume]
type = internal/volume

format-volume = <ramp-volume><label-volume>

format-volume-background = ${colors.modb}
format-volume-padding    = 2

module-margin-right = 0
ramp-volume-0       = 
ramp-volume-1       = 
ramp-volume-2       = 

ramp-volume-foreground = ${colors.green}

label-muted-padding    = 2
label-muted            =  muted
label-muted-background = ${colors.modb}

[module/date1]
type                     = internal/date
interval                 = 1
date                     = " %I:%M"
format-prefix            = 
format-prefix-foreground = ${colors.red}
format-background        = ${colors.modb}
format-padding           = 2

[module/hlws]
format-font       = 1
type              = custom/script
exec              = python2.7 ~/scripts/hlws.py
scroll-down       = exec herbstclient use_index +1
scroll-up         = exec herbstclient use_index -1
interval          = 0.01
format-foreground = ${colors.foreground}
format-background = ${colors.modb2}
format-padding    = 2

[module/previous]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec cmus-remote -r -p
format-foreground = ${colors.cyan}
format-background = ${colors.modb1}
format-padding    = 1

[module/next]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec cmus-remote -n -p
format-foreground = ${colors.cyan}
format-background = ${colors.modb1}
format-padding    = 1

[module/cmusnp]
type              = custom/script
exec              = ~/scripts/cmusnp.py
exec-if           = pgrep cmus > /dev/null
interval          = 0.01
click-left        = cmus-remote -u
click-right       = xdesktop -g 4
format-foreground = ${colors.foreground}
format-background = ${colors.modb1}
format-padding    = 2

[module/playpause]
type              = custom/script
exec              = python3 ~/scripts/playpause.py
interval          = 0.01
click-left        = cmus-remote -u
format-foreground = ${colors.cyan}
format-background = ${colors.modb1}
format-padding    = 2


[module/cpu]
type                     = internal/cpu
label                    = %percentage-core1%%
format-prefix            = " "
format-prefix-foreground = ${colors.magenta}
format-background        = ${colors.modb}
format-padding           = 2

[module/weather]
type                     = custom/script
interval                 = 100
format                   = <label>
format-padding           = 2
format-prefix            = " "
format-suffix            = "°C"
format-prefix-foreground = ${colors.blue}
format-background        = ${colors.modb}
exec                     = python2.7 ~/scripts/weather.py

[module/2bws]
format-font       = 1
type              = custom/script
exec              = python3 ~/scripts/2bws.py
scroll-down       = exec xdesktop -p
scroll-up         = exec xdesktop -n
click-right       = exec xdesktop -p
click-left        = exec xdesktop -n
interval          = 0.01
format-padding    = 3
format-background = ${colors.modb}
