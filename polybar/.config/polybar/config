[colors]
foreground = #121c21
background = #ffe8ede9
modb       = #ffe8ede9
modb1      = #ffe8ede9
modb2      = #ffe8ede9

red     = #b52441
orange  = #fa9a6a
yellow  = #f7cca1
green   = #76a08c
cyan    = #5f9993
blue    = #718c97
magenta = #ce7fcd
white   = #877366

[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

[bar/top]
width    = 18%
height   = 45
offset-x = 2%
offset-y = 710

radius = 200

locale     = de_DE.UTF-8
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = scientifica:size=8:antialias=true;0
font-1 = Siji:size=9:;1

modules-left   = 2bws
modules-center = date
modules-right  = previous playpause next

tray-position    =
tray-padding     = 2
tray-transparent = false
tray-detached    = false
tray-background  = ${colors.modb}
tray-maxsize     = 12

spacing             = 1
padding-left        = 0
padding-right       = 0
module-margin-left  = 0
module-margin-right = 0

; [module/volume]
; type = internal/volume
; 
; format-volume = <ramp-volume><label-volume>
; 
; format-volume-background = ${colors.modb}
; format-volume-padding    = 2
; 
; module-margin-right = 0
; ramp-volume-0       = 
; ramp-volume-1       = 
; ramp-volume-2       = 
; 
; ramp-volume-foreground = ${colors.red}
; 
; label-muted-padding    = 2
; label-muted            =  muted
; label-muted-background = ${colors.modb}

[module/date]
type                     = internal/date
interval                 = 1
date                     = " %I:%M"
format-prefix            = 
format-prefix-foreground = ${colors.red}
format-background        = ${colors.modb}
format-padding           = 2


[module/previous]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec cmus-remote -r -p
click-right        = xdesktop -g 4
format-foreground = ${colors.red}
format-background = ${colors.modb}
format-padding    = 2

[module/next]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec cmus-remote -n -p
click-right        = xdesktop -g 4
format-foreground = ${colors.red}
format-background = ${colors.modb}
format-padding    = 2

[module/playpause]
type              = custom/script
exec              = ~/scripts/playpause.sh
interval          = 0.01
click-left        = cmus-remote -u
click-right       = xdesktop -g 4
scroll-up         = exec amixer -D pulse sset Master 2%+
scroll-down       = exec amixer -D pulse sset Master 2%-
format-foreground = ${colors.red}
format-background = ${colors.modb}
format-padding    = 0


[module/2bws]
format-font       = 1
type              = custom/script
exec              = ~/scripts/2bws.sh
interval          = 0.01
format-padding    = 3
format-background = ${colors.modb}
scroll-up         = xdesktop -n
scroll-down       = xdesktop -p
click-left = exec ~/scripts/gitpop.sh
