[colors]
foreground = ${xrdb:color7}
background = ${xrdb:color0}
modb       = ${xrdb:color0}
modb1      = ${xrdb:color11}
modb2      = ${xrdb:color8}

red     = ${xrdb:color8}
orange  = ${xrdb:color9}
yellow  = ${xrdb:color3}
green   = ${xrdb:color2}
cyan    = ${xrdb:color6}
blue    = ${xrdb:color4}
magenta = ${xrdb:color5}
brown   = ${xrdb:color7}

[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

[bar/top]
width    = 100%
height   = 40
offset-x = 0
offset-y = 728

radius = 200

locale     = de_DE.UTF-8
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = scientifica:size=8:antialias=true;0
font-1 = Siji:size=9:;0
font-2 = scientifica:size=8:weight=bold:antialias=true;0

modules-left   = gitpop date
modules-center = 2bws
modules-right  = cmusnp previous playpause next

tray-position    =
tray-padding     = 2
tray-transparent = false
tray-detached    = false
tray-background  = ${colors.modb}
tray-maxsize     = 12

spacing             = 1
padding-left        = 0
padding-right       = 0
module-margin-left  = 0
module-margin-right = 0

; [module/volume]
; type = internal/volume
; 
; format-volume = <ramp-volume><label-volume>
; 
; format-volume-background = ${colors.modb}
; format-volume-padding    = 2
; 
; module-margin-right = 0
; ramp-volume-0       = 
; ramp-volume-1       = 
; ramp-volume-2       = 
; 
; ramp-volume-foreground = ${colors.cyan}
; 
; label-muted-padding    = 2
; label-muted            =  muted
; label-muted-background = ${colors.modb}

[module/date]
type                     = internal/date
interval                 = 1
date                     = " %I:%M"
format-prefix            = 
format-prefix-foreground = ${colors.cyan}
format-background        = ${colors.modb}
format-padding           = 2


[module/previous]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec cmus-remote -r -p
click-right        = xdesktop -g 4
format-foreground = ${colors.cyan}
format-background = ${colors.modb}
format-padding    = 2

[module/next]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec cmus-remote -n -p
click-right        = xdesktop -g 4
format-foreground = ${colors.cyan}
format-background = ${colors.modb}
format-padding    = 2

[module/playpause]
type              = custom/script
exec              = ~/scripts/playpause.sh
interval          = 0.01
click-left        = cmus-remote -u
click-right       = xdesktop -g 4
scroll-up         = exec amixer sset Master 2%+
scroll-down       = exec amixer sset Master 2%-
format-foreground = ${colors.cyan}
format-background = ${colors.modb}
format-padding    = 0


[module/2bws]
format-font       = 1
type              = custom/script
exec              = ~/scripts/2bws.sh
interval          = 0.01
format-padding    = 1
format-background = ${colors.modb}
scroll-up         = xdesktop -p
scroll-down       = xdesktop -n

[module/gitpop]
exec = echo +
type = custom/script
format-padding    = 3
format-background = ${colors.cyan}
format-foreground = ${colors.modb}
click-left = ~/scripts/gitpop.sh

[module/cmusnp]
type              = custom/script
format-text       = <label>
exec              = ~/scripts/cmusnp.sh
click-left        = cmus-remote -u
click-right       = xdesktop -g 4
scroll-up         = exec amixer sset Master 2%+
scroll-down       = exec amixer sset Master 2%-
format-foreground = ${colors.foreground}
format-background = ${colors.modb}
format-padding    = 0
