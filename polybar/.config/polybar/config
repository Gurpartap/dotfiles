; ---------- global --------------

[colors]
foreground        = ${xrdb:color7}
foreground_bright = ${xrdb:color8}
background        = ${xrdb:color0}
background_bright = ${xrdb:color10}

red     = ${xrdb:color1}
orange  = ${xrdb:color9}
yellow  = ${xrdb:color3}
green   = ${xrdb:color2}
cyan    = ${xrdb:color6}
blue    = ${xrdb:color4}
magenta = ${xrdb:color5}
brown   = ${xrdb:color7}

[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true


; ------------ bars ---------------

[bar/bot]
width    = 100%
height   = 41
offset-x = 0%
offset-y = 1039

locale     = de_DE.UTF-8
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Iosevka Term:size=11:antialias=true;0
font-1 = icomoon:size=13:antbalias=true;1

modules-left   = net vol brit bat
modules-center = 2bws 
modules-right  = date time

tray-position    =

radius-top = 0
border-top-size = 4
border-top-color = ${colors.background_bright}

spacing             = 1
padding-left        = 2
padding-right       = 2
module-margin-left  = 0
module-margin-right = 0

; ---------- modules ---------------

[module/plus]
type           = custom/script
interval       = 0.01
exec           = echo $(( $(xprop -root _NET_CURRENT_DESKTOP | sed -e 's/_NET_CURRENT_DESKTOP(CARDINAL) = //') + 1))
click-left     = ~/scripts/hidebars.sh -s
click-right    = ~/scripts/hidebars.sh -h
scroll-up      = ~/scripts/wscycle.sh -f
scroll-down    = ~/scripts/wscycle.sh -r
format-padding = 3

[module/date]
type = custom/script
interval = 1.0
exec = ~/scripts/date.sh
format-padding = 2
format-foreground = ${colors.foreground}
format-background = ${colors.background}

[module/time]
type              = custom/script
interval          = 1.0
exec              = date +%I:%M
format-padding    = 2
format-foreground = ${colors.foreground}
format-background = ${colors.background}

 
[module/previous]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = cmus-remote -r -p
click-right       = wmctrl -s 5
format-foreground = ${colors.foreground}
format-padding    = 2

[module/next]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = cmus-remote -n -p
click-right       = wmctrl -s 5
format-foreground = ${colors.foreground}
format-padding    = 2

[module/playpause]
type              = custom/script
exec              = ~/scripts/playpause.sh
click-left        = cmus-remote -u
click-right       = wmctrl -s 5
scroll-up         = exec amixer sset Master 2%+
scroll-down       = exec amixer sset Master 2%-
format-foreground = ${colors.green}
format-padding    = 2

[module/2bws]
type              = custom/script
exec              = exec ~/scripts/2bws.sh
interval          = 0.01
format-padding    = 2
scroll-up         = exec ~/scripts/wscycle.sh -f
scroll-down       = exec ~/scripts/wscycle.sh -r
format-font       = 3

[module/bat]
type                       = internal/battery
battery                    = BAT0
adapter                    = ADP1
format-charging            =<label-charging>
format-discharging         =<ramp-capacity>
label-charging             = %percentage%%
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-0-foreground = ${colors.red}
ramp-capacity-1-foreground = ${colors.orange}
ramp-capacity-2-foreground = ${colors.foreground}
ramp-capacity-3-foreground = ${colors.foreground}
ramp-capacity-4-foreground = ${colors.green}
format-background          = ${colors.background}
format-charging-padding    = 1
format-discharging-padding = 1

[module/vol]
type                  = internal/alsa
format-volume         = <ramp-volume>
label-muted           =  muted
ramp-volume-0         = 
ramp-volume-1         = 
ramp-volume-2         = 
ramp-headphones-0     = 
ramp-headphones-1     = 
format-volume-padding = 2
label-muted-padding   = 2

[module/net]
type              = custom/script
exec              = exec ~/scripts/netwrk.sh
interval          = 1
format-padding    = 2
click-left        = urxvtc -g 50x22 -b 0 -e nmtui

[module/cmusnp]
type              = custom/script
interval          = 0.1
format-text       = <label>
exec              = ~/scripts/cmusnp.sh
click-left        = cmus-remote -u
click-right       = wmctrl -s 5
scroll-up         = exec amixer sset Master 2%+
scroll-down       = exec amixer sset Master 2%-
format-foreground = ${colors.foreground}

[module/brit]
type              = custom/script
exec              = echo "  "
interval          = 1
format-padding    = 2
scroll-up         = light -A 5
scroll-down       = light -U 5
click-left = redshift -O 4000
click-right = redshift -O 6500

