! ------------------------------------------------------------------------------
! ROFI COLOR THEME
! ------------------------------------------------------------------------------
rofi.color-enabled: true

rofi.color-window:    base00 , base00 , base00 , base00 , base05
rofi.color-normal:    base00 , base05 , base00 , base0C , base00
rofi.color-active:    base02 , base0E , base00 , base0B , base00
rofi.color-urgent:    base00 , base03 , base00 , base00 , base05

rofi.fake-transparency : true
rofi.font              : scientifica 9
rofi.columns           : 1
rofi.separator-style   : none
rofi.hide-scrollbar    : true
rofi.location          : 1
rofi.yoffset           : 32
rofi.xoffset           : 32
rofi.padding           : 32
rofi.fullscreen        : false
rofi.width             : 350
rofi.lines             : 6

Xft.dpi       : 96
Xft.antialias : true
Xft.rgba      : rgb
Xft.hinting   : true
Xft.hintstyle : hintslight
Xft.autohint  : false
Xft.lcdfilter : lcddefault

