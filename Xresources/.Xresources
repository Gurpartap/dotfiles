! ------------------------------------------------------------------------------
!  Colors
! ------------------------------------------------------------------------------

#define base00 #30353a
#define base01 #3b4147
#define base02 #464d54
#define base03 #505961
#define base04 #8ba0b9
#define base05 #d1d2cb
#define base06 #dfe0d9
#define base07 #fefff7
#define base08 #a2b1a8
#define base09 #a2b1a8
#define base0A #b6c6b8
#define base0B #66a8b1
#define base0C #75bec3
#define base0D #5895a7
#define base0E #9fabbf
#define base0F #d0decf

! ------------------------------------------------------------------------------
!  URxvt
! ------------------------------------------------------------------------------

*foreground:   base05
*background:   base00
*cursorColor:  base05

*color0:       base00
*color1:       base08
*color2:       base0B
*color3:       base0A
*color4:       base0D
*color5:       base0E
*color6:       base0C
*color7:       base05

*color8:       base03
*color9:       base09
*color10:      base01
*color11:      base02
*color12:      base04
*color13:      base06
*color14:      base0F
*color15:      base07


URxvt.cursorBlink  :1
URxvt.font        :xft:scientifica:size=9
URxvt.boldFont    :xft:scientifica:italic:size=9
URxvt.italicFont  :xft:scientifica:italic:size=9

URxvt.lineSpace           : 1
URxvt.letterSpace         : 1
URxvt.scrollBar           : false
URxvt.internalBorder      : 18
URxvt.cursorUnderline     : false
URxvt.geometry            : 70x35
URxvt.thickness           : 5
URxvt.titleBar            : false
URxvt.intensityStyles     : false


URxvt.perl-ext-common : default,matcher
URxvt.url-launcher    : chromium
URxvt.matcher.button  : 1

! ------------------------------------------------------------------------------
! rofi
! ------------------------------------------------------------------------------
rofi.color-enabled: true

rofi.color-window:    base00 , base00 , base00 , base00 , base03
rofi.color-normal:    base00 , base03 , base00 , base00 , base07
rofi.color-active:    base03 , base0E , base00 , base0B , base00
rofi.color-urgent:    base00 , base03 , base00 , base00 , base03

rofi.fake-transparency : true
rofi.font              : scientifica 9
rofi.columns           : 1
rofi.separator-style   : none
rofi.hide-scrollbar    : true
rofi.location          : 1
rofi.yoffset           : 32
rofi.xoffset           : 32
rofi.padding           : 32
rofi.fullscreen        : false
rofi.width             : 350
rofi.lines             : 6

Xft.dpi       : 96
Xft.antialias : true
Xft.rgba      : rgb
Xft.hinting   : true
Xft.hintstyle : hintslight
Xft.autohint  : false
Xft.lcdfilter : lcddefault

! ------------------------------------------------------------------------------
! 2bwm
! ------------------------------------------------------------------------------

twobwm.border_width: 7
twobwm.outer_border: 5
twobwm.focus_color: base02
twobwm.unfocus_color: base01
twobwm.fixed_color: base0D
twobwm.unkill_color: base08
twobwm.fixed_unkill_color: base0E
twobwm.outer_border_color: base00
twobwm.inverted_colors: false
