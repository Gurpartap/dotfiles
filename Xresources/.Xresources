! ------------------------------------------------------------------------------
!  Colors
! ------------------------------------------------------------------------------

#define base00 #081018
#define base01 #3a3a3a
#define base02 #525252
#define base03 #5c5c5c
#define base04 #696969
#define base05 #a3a7a8
#define base06 #bdc1c3
#define base07 #ccd0d2
#define base08 #96ab98
#define base09 #96ab98
#define base0A #96ab98
#define base0B #96ab98
#define base0C #70a070
#define base0D #96ab98
#define base0E #96ab98
#define base0F #96ab98

! ------------------------------------------------------------------------------
!  URxvt
! ------------------------------------------------------------------------------

*foreground:   base05
*background:   base00
*cursorColor:  base05

*color0:       base00
*color1:       base08
*color2:       base0B
*color3:       base0A
*color4:       base0D
*color5:       base0E
*color6:       base0C
*color7:       base05

*color8:       base03
*color9:       base09
*color10:      base01
*color11:      base02
*color12:      base04
*color13:      base06
*color14:      base0F
*color15:      base07


URxvt.cursorBlink  :1
URxvt.font         :xft:scientifica:size=9
URxvt.boldFont     :xft:scientifica:size=9

URxvt.lineSpace           : 1
URxvt.letterSpace         : 1
URxvt.scrollBar           : false
URxvt.internalBorder      : 28
URxvt.cursorUnderline     : false
URxvt.geometry            : 70x35
URxvt.thickness           : 5
URxvt.titleBar            : false
URxvt.intensityStyles     : false


URxvt.perl-ext-common : default,matcher
URxvt.url-launcher    : chromium
URxvt.matcher.button  : 1

! ------------------------------------------------------------------------------
! rofi
! ------------------------------------------------------------------------------
rofi.color-enabled: true

rofi.color-window:    base00 , base00 , base00 , base00 , base05
rofi.color-normal:    base00 , base05 , base00 , base0C , base00
rofi.color-active:    base02 , base0E , base00 , base0B , base00
rofi.color-urgent:    base00 , base03 , base00 , base00 , base05

rofi.fake-transparency : true
rofi.font              : scientifica 9
rofi.columns           : 1
rofi.separator-style   : none
rofi.hide-scrollbar    : true
rofi.location          : 1
rofi.yoffset           : 32
rofi.xoffset           : 32
rofi.padding           : 32
rofi.fullscreen        : false
rofi.width             : 350
rofi.lines             : 6

Xft.dpi       : 96
Xft.antialias : true
Xft.rgba      : rgb
Xft.hinting   : true
Xft.hintstyle : hintslight
Xft.autohint  : false
Xft.lcdfilter : lcddefault

! ------------------------------------------------------------------------------
! 2bwm
! ------------------------------------------------------------------------------

twobwm.border_width: 8
twobwm.outer_border: 6
twobwm.focus_color: base00
twobwm.unfocus_color: base00
twobwm.fixed_color: base0C
twobwm.unkill_color: base08
twobwm.fixed_unkill_color: base0E
twobwm.outer_border_color: base00
twobwm.inverted_colors: false
